{
    "workbench.iconTheme": "material-icon-theme",
    
    // Editor config
    "editor.fontSize": 15,
    "editor.tabCompletion": "on",
    "editor.fontLigatures": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono, 'Courier New', monospace",
    "editor.useTabStops": true,
    "editor.insertSpaces": false,
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    "editor.occurrencesHighlight": false,
    "editor.cursorBlinking": "solid",
    "editor.inlayHints.enabled": false,
    "terminal.integrated.shellIntegration.enabled": true,
 // "editor.guides.bracketPairs":"active",

    // Disable symbol completion
    "[cpp]": {
        "editor.autoClosingBrackets": "never",
        "editor.autoClosingQuotes": "never",
        "editor.suggestOnTriggerCharacters": false,
        // Show suggestion only when pressing Ctrl+Space
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.wordBasedSuggestions": false,
        "editor.quickSuggestionsDelay": 1000000,
        // Show hint only when pressing Ctrl+Shift+Space
        "editor.parameterHints.enabled": false,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
        // "editor.formatOnSave": true
    },
    "[hpp]": {
        "editor.autoClosingBrackets": "never",
        "editor.autoClosingQuotes": "never",
        "editor.suggestOnTriggerCharacters": false,
        // Show suggestion only when pressing Ctrl+Space
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.wordBasedSuggestions": false,
        "editor.quickSuggestionsDelay": 1000000,
        // Show hint only when pressing Ctrl+Shift+Space
        "editor.parameterHints.enabled": false,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
        // "editor.formatOnSave": true
    },
    "[c]": {
        "editor.autoClosingBrackets": "never",
        "editor.autoClosingQuotes": "never",
        "editor.suggestOnTriggerCharacters": false,
        // Show suggestion only when pressing Ctrl+Space
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.wordBasedSuggestions": false,
        "editor.quickSuggestionsDelay": 1000000,
        // Show hint only when pressing Ctrl+Shift+Space
        "editor.parameterHints.enabled": false,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
        // "editor.formatOnSave": true
    },
    "[h]": {
        "editor.autoClosingBrackets": "never",
        "editor.autoClosingQuotes": "never",
        "editor.suggestOnTriggerCharacters": false,
        // Show suggestion only when pressing Ctrl+Space
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.wordBasedSuggestions": false,
        "editor.quickSuggestionsDelay": 1000000,
        // Show hint only when pressing Ctrl+Shift+Space
        "editor.parameterHints.enabled": false,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
        // "editor.formatOnSave": true
    },

    
    // Terminal config
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    
    // Extension: "C/C++ Compile Run"
    "c-cpp-compile-run.cpp-flags": "-std=c++17 -DLOCAL -ggdb3 -Wall -Wextra -Wunused-variable -pedantic -Wshadow -Wformat=2 -Wfloat-equal -Wconversion -Wlogical-op -Wshift-overflow=2 -Wduplicated-cond -Wcast-qual -Wcast-align -D_GLIBCXX_DEBUG -D_GLIBCXX_DEBUG_PEDANTIC -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS -fno-sanitize-recover -fstack-protector",
    "oneDarkPro.italic": false,
    "oneDarkPro.color": {
        "chalky": "",
        "coral": "#b5e3cc",
        "dark": "",
        "error": "",
        "fountainBlue": "",
        "green": "",
        "invalid": "",
        "lightDark": "",
        "lightWhite": "",
        "malibu": "",
        "purple": "",
        "whiskey": "",
        "deepRed": ""
    },

    // Extension: C++
    "C_Cpp.default.compilerArgs": [
        "-std=c++17 -DLOCAL -ggdb3 -Wall -Wextra -Wunused-variable -pedantic -Wshadow -Wformat=2 -Wfloat-equal -Wlogical-op -Wshift-overflow=2 -Wduplicated-cond -Wcast-qual -Wcast-align -D_GLIBCXX_DEBUG -D_GLIBCXX_DEBUG_PEDANTIC -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS -fno-sanitize-recover -fstack-protector -Wconversion"
    ],
    // Change format setting
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, UseTab: Always, TabWidth: 4, ColumnLimit: 0}",

    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "footsteps.doHighlightChanges": false,
    "markdown.preview.fontSize": 18,
    "errorLens.fontStyleItalic": true,
    "errorLens.messageBackgroundMode": "none",
    "workbench.colorTheme": "One Dark Pro",
    "code-eol.color": "#565E67",
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "D:\\QuangBui\\_AppFolder\\NVim\\Neovim\\bin\\nvim.exe",
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "D:\\QuangBui\\_Utilities\\vim-config\\_vimrc",
    "vim.shell": "C:\\Windows\\System32\\cmd.exe",
    "vim.smartRelativeLine": true,
    "files.associations": {
        "*.vim": "vimrc"
    },
    "editor.unicodeHighlight.nonBasicASCII": false,

